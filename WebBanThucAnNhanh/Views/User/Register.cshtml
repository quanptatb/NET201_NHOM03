@model WebBanThucAnNhanh.Models.User

@{
    ViewData["Title"] = "Đăng Ký Tài Khoản";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="font-weight-light my-2">Đăng Ký Tài Khoản</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Register" id="registerForm">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Username" class="control-label fw-bold"></label>
                            <input asp-for="Username" class="form-control" placeholder="Nhập tên đăng nhập" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="control-label fw-bold"></label>
                            <div class="input-group">
                                <input asp-for="Password" class="form-control" type="password" id="passwordInput" placeholder="Nhập mật khẩu" />
                                <button class="btn btn-outline-secondary" type="button" onclick="togglePassword('passwordInput', 'eyeIcon1')">
                                    <i class="bi bi-eye-slash" id="eyeIcon1"></i>
                                </button>
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="control-label fw-bold">Xác nhận mật khẩu</label>
                            <div class="input-group">
                                <input type="password" class="form-control" id="confirmPasswordInput" placeholder="Nhập lại mật khẩu" required />
                                <button class="btn btn-outline-secondary" type="button" onclick="togglePassword('confirmPasswordInput', 'eyeIcon2')">
                                    <i class="bi bi-eye-slash" id="eyeIcon2"></i>
                                </button>
                            </div>
                            <span id="confirmMessage" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="control-label fw-bold"></label>
                            <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="FullName" class="control-label fw-bold"></label>
                            <input asp-for="FullName" class="form-control" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="control-label fw-bold"></label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Address" class="control-label fw-bold"></label>
                            <input asp-for="Address" class="form-control" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Role" class="control-label fw-bold"></label>
                            <input asp-for="Role" class="form-control" value="Customer" readonly />
                            <span asp-validation-for="Role" class="text-danger"></span>
                            <small class="text-muted">Mặc định vai trò là Khách hàng</small>
                        </div>

                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">Đăng Ký</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center py-3">
                    <div class="small"><a asp-action="Login">Bạn đã có tài khoản? Đăng nhập ngay</a></div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        // 1. Hàm ẩn/hiện mật khẩu
        function togglePassword(inputId, iconId) {
            var input = document.getElementById(inputId);
            var icon = document.getElementById(iconId);

            if (input.type === "password") {
                input.type = "text";
                icon.classList.remove("bi-eye-slash");
                icon.classList.add("bi-eye");
            } else {
                input.type = "password";
                icon.classList.remove("bi-eye");
                icon.classList.add("bi-eye-slash");
            }
        }

        // 2. Kiểm tra mật khẩu xác nhận trước khi submit
        document.getElementById("registerForm").addEventListener("submit", function(event) {
            var pass = document.getElementById("passwordInput").value;
            var confirmPass = document.getElementById("confirmPasswordInput").value;
            var message = document.getElementById("confirmMessage");

            if (pass !== confirmPass) {
                message.textContent = "Mật khẩu xác nhận không khớp!";
                event.preventDefault(); // Chặn không cho submit
            } else {
                message.textContent = "";
            }
        });
    </script>
}