@model IEnumerable<WebBanThucAnNhanh.Models.TypeOfFastFood>

@{
    ViewData["Title"] = "Quản lý loại món ăn";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="admin-page">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="admin-title">Quản lý loại món ăn</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Thêm loại
        </a>
    </div>

    <div class="card admin-card">
        <div class="card-body">
            <table class="table align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Tên loại</th>
                        <th class="text-end">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.NameTypeOfFastFood</td>
                            <td class="text-end">
                                <a asp-action="Edit"
                                   asp-route-id="@item.IdTypeOfFastFood"
                                   class="btn btn-outline-primary btn-sm me-1"
                                   title="Chỉnh sửa">
                                    <i class="bi bi-pencil"></i>
                                </a>

                                <a asp-action="Details"
                                   asp-route-id="@item.IdTypeOfFastFood"
                                   class="btn btn-outline-info btn-sm me-1"
                                   title="Xem chi tiết">
                                    <i class="bi bi-eye"></i>
                                </a>

                                <a asp-action="Delete"
                                   asp-route-id="@item.IdTypeOfFastFood"
                                   class="btn btn-outline-danger btn-sm"
                                   title="Xóa">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
