@model IEnumerable<WebBanThucAnNhanh.Models.FastFood>

@{
    ViewData["Title"] = "Kết quả tìm kiếm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="menu" style="padding-top: 150px;">
    <div class="container">
        <div class="section-title text-center">
            <h2>Kết Quả <span class="highlight">Tìm Kiếm</span></h2>
        </div>

        @* --- FORM TÌM KIẾM (Để khách tìm lại nếu muốn) --- *@
        <div class="advanced-search-container">
            <form method="get" action="@Url.Action("Search", "Home")" class="search-form">
                <div class="search-row">
                    <div class="search-group search-keyword">
                        <i class="fas fa-search"></i>
                        <input type="text" name="keyword" value="@ViewBag.Keyword" placeholder="Nhập tên món..." />
                    </div>
                    <div class="search-group">
                        <select name="themeId">
                            <option value="">-- Chọn Chủ đề --</option>
                            @if (ViewBag.Themes != null)
                            {
                                foreach (var theme in ViewBag.Themes)
                                {
                                    // Logic để giữ lại option đã chọn
                                    var isSelected = (int?)ViewBag.CurrentTheme == theme.IdTheme ? "selected" : "";
                                    <option value="@theme.IdTheme">@theme.NameTheme</option>
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="search-row">
                    <div class="search-group price-range">
                        <label>Giá:</label>
                        <input type="number" name="minPrice" value="@ViewBag.MinPrice" placeholder="Từ" />
                        <span>-</span>
                        <input type="number" name="maxPrice" value="@ViewBag.MaxPrice" placeholder="Đến" />
                    </div>
                    <div class="search-group search-btn-group">
                        <button type="submit" class="btn btn-search"><i class="fas fa-filter"></i> Lọc</button>
                        <a href="@Url.Action("Index", "Home")" class="btn btn-reset"><i class="fas fa-sync"></i></a>
                    </div>
                </div>
            </form>
        </div>

        @* --- HIỂN THỊ KẾT QUẢ --- *@
        <div style="margin-top: 30px;">
            @if (Model.Count() == 0)
            {
                <div class="text-center">
                    <p class="text-muted">Không tìm thấy món ăn nào phù hợp.</p>
                    <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Về trang chủ</a>
                </div>
            }
            else
            {
                <div class="menu-content active-content" style="display: grid;">
                    @foreach (var item in Model)
                    {
                        <div class="menu-item animate-on-scroll">
                            <div class="menu-item-img">
                                <img src="@Url.Content("~/images/" + item.Image)" alt="@item.NameFastFood" />
                            </div>
                            <div class="menu-item-content">
                                <div class="menu-item-title">
                                    <h4>@item.NameFastFood</h4>
                                    <div class="menu-item-price">@item.Price.ToString("#,##0") đ</div>
                                </div>
                                <p class="menu-item-text">
                                    <small class="highlight">@item.TypeOfFastFood?.NameTypeOfFastFood</small><br />
                                    @item.Description
                                </p>
                                <div class="menu-item-order">
                                    @* Phần đánh giá sao bên trái *@
                                    <div class="menu-item-rating">
                                        <i class="fas fa-star" style="color: #ffc107;"></i>
                                        <i class="fas fa-star" style="color: #ffc107;"></i>
                                        <i class="fas fa-star" style="color: #ffc107;"></i>
                                        <i class="fas fa-star" style="color: #ffc107;"></i>
                                        <i class="fas fa-star" style="color: #ffc107;"></i>
                                    </div>

                                    @* Phần hành động bên phải: Số lượng + Nút Thêm *@
                                    <div class="action-group">
                                        <input type="number" class="qty-input" value="1" min="1" max="99" />

                                        <a href="#" class="btn-sm-custom" onclick="return false;">
                                            <i class="fas fa-cart-plus"></i> Thêm
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</section>