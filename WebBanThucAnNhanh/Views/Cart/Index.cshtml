@model List<WebBanThucAnNhanh.Models.CartItem>
@{
    ViewData["Title"] = "Giỏ hàng của bạn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="cart-section" style="padding-top: 120px; padding-bottom: 50px;">
    <div class="container">
        <h2 class="text-center mb-4">Giỏ hàng của bạn</h2>

        @if (Model == null || Model.Count == 0)
        {
            <div class="text-center">
                <div class="mb-3">
                    <i class="fas fa-shopping-basket fa-4x text-muted"></i>
                </div>
                <p class="lead">Giỏ hàng đang trống!</p>
                <a href="@Url.Action("Index", "Home")" class="btn btn-primary mt-3">
                    <i class="fas fa-arrow-left"></i> Tiếp tục mua sắm
                </a>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-bordered table-hover align-middle">
                    <thead class="table-dark text-center">
                        <tr>
                            <th>Hình ảnh</th>
                            <th>Tên món</th>
                            <th>Đơn giá</th>
                            <th style="width: 150px;">Số lượng</th>
                            <th>Thành tiền</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center">
                                    <img src="~/images/@item.Image" alt="@item.Name"
                                        style="width: 70px; height: 70px; object-fit: cover; border-radius: 8px;">
                                </td>
                                <td>
                                    <strong>@item.Name</strong>
                                </td>
                                <td class="text-end">@item.Price.ToString("n0") đ</td>
                                <td>
                                    @* Form cập nhật số lượng *@
                                    <form asp-action="UpdateCart" asp-controller="Cart" method="post"
                                        class="d-flex justify-content-center">
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <input type="number" name="quantity" value="@item.Quantity" min="1" max="99"
                                            class="form-control text-center me-2" style="width: 70px;" />
                                        <button type="submit" class="btn btn-sm btn-outline-secondary" title="Cập nhật">
                                            <i class="fas fa-sync-alt"></i>
                                        </button>
                                    </form>
                                </td>
                                <td class="text-end fw-bold text-danger">
                                    @((item.Price * item.Quantity).ToString("n0")) đ
                                </td>
                                <td class="text-center">
                                    <a href="@Url.Action("Remove", "Cart", new { id = item.Id })" class="btn btn-sm btn-danger"
                                        onclick="return confirm('Bạn có chắc muốn xóa món này?');">
                                        <i class="fas fa-trash-alt"></i> Xóa
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="4" class="text-end fw-bold fs-5">Tổng cộng:</td>
                            <td class="text-end fw-bold fs-4 text-danger">
                                @Model.Sum(x => x.Price * x.Quantity).ToString("n0") đ
                            </td>
                            <td></td>
                        </tr>
                    </tfoot>
                </table>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a href="@Url.Action("Clear", "Cart")" class="btn btn-outline-danger"
                    onclick="return confirm('Bạn muốn xóa toàn bộ giỏ hàng?');">
                    <i class="fas fa-trash"></i> Xóa tất cả
                </a>

                <div>
                    <a href="@Url.Action("Index", "Home")" class="btn btn-secondary me-2">
                        <i class="fas fa-arrow-left"></i> Mua thêm
                    </a>
                    <a href="@Url.Action("Index", "Checkout")" class="btn btn-success btn-lg">
                        <i class="fas fa-check-circle"></i> Thanh toán ngay
                    </a>
                </div>
            </div>
        }
    </div>
</section>