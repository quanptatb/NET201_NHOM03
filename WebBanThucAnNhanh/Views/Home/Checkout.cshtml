@model WebBanThucAnNhanh.Models.Order
@{ ViewData["Title"] = "Thanh toán"; }

<h2>Xác nhận đơn hàng</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @Html.ValidationSummary(false)
    </div>
}

<form asp-action="Checkout">
    <div class="form-group mb-3">
        <label>Địa chỉ giao hàng</label>
        <input asp-for="ShippingAddress" class="form-control" required placeholder="Nhập địa chỉ nhận hàng..." />
        <span asp-validation-for="ShippingAddress" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label>Số điện thoại nhận hàng</label>
        <input asp-for="PhoneNumber" class="form-control" required placeholder="Nhập số điện thoại..." />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    
    <div class="form-group mb-3">
        <label>Tổng tiền (VND)</label>
        <input asp-for="TotalPrice" class="form-control" readonly style="background-color: #e9ecef; font-weight: bold;" />
    </div>

    <button type="submit" class="btn btn-success mt-3">Xác nhận đặt hàng</button>
    <a asp-controller="Cart" asp-action="Index" class="btn btn-secondary mt-3">Quay lại giỏ hàng</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}