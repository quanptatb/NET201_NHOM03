@model IEnumerable<WebBanThucAnNhanh.Models.FastFood>

@{
    ViewData["Title"] = "Quản lý món ăn";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="admin-page">

    <!-- HEADER -->
    <div class="admin-header d-flex justify-content-between align-items-center mb-4">
        <h2 class="admin-title">Quản lý món ăn</h2>

        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-person-plus"></i> Thêm người dùng
        </a>
    </div>

    <!-- CARD -->
    <div class="card admin-card">
        <div class="card-body p-0">

            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Ảnh</th>
                        <th>Tên món</th>
                        <th>Giá</th>
                        <th>Số lượng</th>
                        <th>Trạng thái</th>
                        <th>Loại</th>
                        <th>Theme</th>
                        <th class="text-center">Thao tác</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <img src="~/images/@item.Image"
                                     class="food-thumb"
                                     alt="@item.NameFastFood" />
                            </td>

                            <td class="fw-bold">
                                @item.NameFastFood
                            </td>

                            <td class="text-danger fw-semibold">
                                @item.Price.ToString("N0") đ
                            </td>

                            <td>
                                @item.Quantity
                            </td>

                            <td>
                                @if (item.Status)
                                {
                                    <span class="badge bg-success">Còn hàng</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Hết hàng</span>
                                }
                            </td>

                            <td>
                                @item.TypeOfFastFood?.NameTypeOfFastFood
                            </td>

                            <td>
                                @item.Theme?.NameTheme
                            </td>

                            <td class="text-center">
                                <a asp-action="Edit"
                                   asp-route-id="@item.IdFastFood"
                                   class="btn btn-sm btn-outline-primary me-1"
                                   title="Sửa">
                                    <i class="bi bi-pencil"></i>
                                </a>

                                <a asp-action="Details"
                                   asp-route-id="@item.IdFastFood"
                                   class="btn btn-sm btn-outline-info me-1"
                                   title="Chi tiết">
                                    <i class="bi bi-eye"></i>
                                </a>

                                <a asp-action="Delete"
                                   asp-route-id="@item.IdFastFood"
                                   class="btn btn-sm btn-outline-danger"
                                   onclick="return confirm('Bạn chắc chắn muốn xóa món này?');"
                                   title="Xóa">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>

        </div>
    </div>

</div>
