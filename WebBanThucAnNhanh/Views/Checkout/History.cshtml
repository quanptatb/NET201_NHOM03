@model IEnumerable<WebBanThucAnNhanh.Models.Order>
@{
    ViewData["Title"] = "Lịch sử đơn hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <h2 class="mb-4">Lịch sử mua hàng của bạn</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">Bạn chưa có đơn hàng nào.</div>
        <a asp-action="Index" asp-controller="Home" class="btn btn-primary">Mua sắm ngay</a>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Mã đơn</th>
                        <th>Ngày đặt</th>
                        <th>Tổng tiền</th>
                        <th>Trạng thái</th>
                        <th>Địa chỉ giao hàng</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>#@item.IdOrder</td>
                            <td>@item.DateCreated.ToString("dd/MM/yyyy HH:mm")</td>
                            <td class="text-danger fw-bold">@item.TotalPrice.ToString("N0") VNĐ</td>
                            <td>
                                @* --- ĐÃ SỬA LẠI LOGIC HIỂN THỊ CHO KHỚP VỚI MODEL Order.cs --- *@
                                @switch (item.Status)
                                {
                                    case 0: // Chưa giao
                                        <span class="badge bg-warning text-dark">Đang xử lý</span>
                                        break;
                                    case 1: // Đang giao
                                        <span class="badge bg-primary">Đang giao hàng</span>
                                        break;
                                    case 2: // Đã giao
                                        <span class="badge bg-success">Giao thành công</span>
                                        break;
                                    case 3: // Hủy
                                        <span class="badge bg-danger">Đã hủy</span>
                                        break;
                                    default:
                                        <span class="badge bg-secondary">Không xác định</span>
                                        break;
                                }
                            </td>
                            <td>@item.ShippingAddress <br /> <small class="text-muted">SĐT: @item.PhoneNumber</small></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
