@model WebBanThucAnNhanh.Models.Order
@{
    ViewData["Title"] = "Quản lý người dùng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml"; // Trỏ về layout admin mới tạo
}
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdOrder" />

            @* 1. KHÔNG CHO SỬA NGÀY *@
            <div class="form-group mb-3">
                <label asp-for="DateCreated" class="control-label"></label>
                <input asp-for="DateCreated" class="form-control" readonly />
            </div>

            @* 2. KHÔNG CHO SỬA TỔNG TIỀN *@
            <div class="form-group mb-3">
                <label asp-for="TotalPrice" class="control-label"></label>
                <input asp-for="TotalPrice" class="form-control" readonly />
            </div>

            @* 3. CHO PHÉP SỬA TRẠNG THÁI *@
            <div class="form-group mb-3">
                <label asp-for="Status" class="control-label">Trạng thái đơn hàng</label>
                <select asp-for="Status" class="form-control">
                    <option value="0">Chưa giao</option>
                    <option value="1">Đang giao</option>
                    <option value="2">Đã giao</option>
                    <option value="3">Hủy đơn</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            @* Các thông tin ship chỉ hiển thị, hạn chế sửa nếu không cần thiết *@
            <div class="form-group mb-3">
                <label asp-for="ShippingAddress" class="control-label"></label>
                <input asp-for="ShippingAddress" class="form-control" />
            </div>

            @* Ẩn UserId, không cho đổi người mua *@
            <input type="hidden" asp-for="UserId" />

            <div class="form-group">
                <input type="submit" value="Lưu trạng thái" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Hủy</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
