@model WebBanThucAnNhanh.Models.User
@{
    ViewData["Title"] = "Đăng Ký";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="auth-section">
    <div class="container">
        <div class="auth-card animate-on-scroll" style="max-width: 700px;">
            <div class="section-title text-center" style="margin-bottom: 30px;">
                <h2>Đăng Ký</h2>
                <p>Tạo tài khoản để đặt món nhanh chóng!</p>
            </div>

            @* --- SỬA QUAN TRỌNG: Dùng asp-controller và asp-action để tự động sinh Token --- *@
            <form asp-controller="Account" asp-action="Register" method="post">

                @* Hiển thị thông báo lỗi chung nếu có *@
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger text-center mb-3">@ViewBag.Error</div>
                }
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-row">
                    <div class="form-group" style="flex: 1; min-width: 280px;">
                        <label>Họ và tên</label>
                        <div class="input-with-icon">
                            <i class="fas fa-id-card"></i>
                            <input asp-for="FullName" type="text" placeholder="VD: Nguyễn Văn A" required />
                        </div>
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="flex: 1; min-width: 280px;">
                        <label>Số điện thoại</label>
                        <div class="input-with-icon">
                            <i class="fas fa-phone"></i>
                            <input asp-for="PhoneNumber" type="text" placeholder="09xxxx..." required />
                        </div>
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group" style="flex: 1; min-width: 280px;">
                        <label>Email</label>
                        <div class="input-with-icon">
                            <i class="fas fa-envelope"></i>
                            <input asp-for="Email" type="email" placeholder="example@gmail.com" required />
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="flex: 1; min-width: 280px;">
                        <label>Địa chỉ</label>
                        <div class="input-with-icon">
                            <i class="fas fa-map-marker-alt"></i>
                            <input asp-for="Address" type="text" placeholder="Số nhà, đường..." required />
                        </div>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>

                <hr style="border-top: 1px dashed #eee; margin: 15px 0;">

                <div class="form-row">
                    <div class="form-group" style="flex: 1; min-width: 280px;">
                        <label>Tên đăng nhập</label>
                        <div class="input-with-icon">
                            <i class="fas fa-user-circle"></i>
                            <input asp-for="Username" type="text" placeholder="Chọn tên đăng nhập" required />
                        </div>
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="flex: 1; min-width: 280px;">
                        <label>Mật khẩu</label>
                        <div class="input-with-icon">
                            <i class="fas fa-lock"></i>
                            <input asp-for="Password" type="password" placeholder="******" required />
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-submit" style="margin-top: 25px;">
                    <button type="submit" class="btn btn-large shine-effect" style="width: 100%;">
                        Đăng Ký Tài Khoản
                    </button>
                </div>

                <div class="auth-links">
                    <p>Đã có tài khoản? <a href="@Url.Action("Login", "Account")">Đăng nhập ngay</a></p>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}